{
  "name": "mogu-vue",
  "version": "1.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "capacitor:build": "vite build && npx cap sync android",
    "electron:dev": "vite --host",
    "electron:build": "vite build --mode electron && electron-builder",
    "dev": "vite --host",
    "build": "vite build",
    "test-del-json": "node node/remove-dist-json.js",
    "build-uni-app": "vite build --mode uni",
    "build-gp-pages": "vite build --mode gp_pages",
    "build-gitee-pages": "vite build --mode gitee_pages && pnpm run test-del-json",
    "build-check": "run-p type-check \"build-only {@}\" --",
    "type-check": "vue-tsc --build --force",
    "preview": "vite preview",
    "lint": "eslint  --fix  . --ext .vue,.js,.ts,.tsx,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "dependencies": {
    "@bufbuild/buf": "^1.50.0",
    "@bufbuild/protobuf": "^2.2.3",
    "@bufbuild/protoc-gen-es": "^2.2.3",
    "@capacitor/android": "^7.0.1",
    "@capacitor/app": "^7.0.0",
    "@capacitor/core": "^7.0.1",
    "@capacitor/ios": "^7.0.1",
    "@capacitor/toast": "^7.0.0",
    "@connectrpc/connect": "^2.0.1",
    "@connectrpc/connect-web": "^2.0.1",
    "@jambonn/vue-lazyload": "1.0.9",
    "axios": "^1.6.8",
    "axios-mock-adapter": "^1.22.0",
    "core-js": "3.21.1",
    "libarchive-wasm": "^1.1.0",
    "lodash-es": "^4.17.21",
    "mockjs": "^1.1.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^4.2.0",
    "vue": "^3.5.13",
    "vue-router": "4.3.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.0.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@iconify/vue": "^4.1.1",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.17.22",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.17.0",
    "git-last-commit": "^1.0.1",
    "husky": "^9.0.11",
    "less": "4.1.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^5.9.2",
    "typescript": "^5.3.3",
    "unplugin-vue-macros": "^2.9.1",
    "vite": "^5.4.12",
    "vite-plugin-cdn-import": "0.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^2.0.6"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,less,styl,html}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "build": {
    "appId": "com.asmbio.p2psosial",
    "productName": "p2p-sosial",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "electron/bin/${os}",
        "to": "${os}",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "dist",
      "dist-electron"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
